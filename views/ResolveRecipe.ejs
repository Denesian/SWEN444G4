<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="jquery.barrating.min.js"></script>
  
  <script>
  $( function() {
    $( "#tabs" ).tabs();
    $( "#selectable" ).selectable();
    document.getElementById("exit").onclick = function () {
        location.href = "moderatorDashboard";
    };
    document.getElementById("ignore").onclick = function () {
        location.href = "moderatorDashboard";
    };
    document.getElementById("remove").onclick = function () {
        location.href = "moderatorDashboard";
    };
    document.getElementById("tagConfirm").onclick = function () {

      var tagVal=document.getElementById("tag").value;
      if (tagVal.length >= 1)
      {
        location.href = "moderatorDashboard";
      }
        
    };
  } );
  </script>
<style>
  
  
</style>

</head>

<body>

  <div class ="header" style="background-color:#C0D3F2; position:relative">
      <h2>Fettuccine Alfredo</h2>
      <p><a href="/profile">Username</a><p>
      <img id="exit" src="/images/exitNeutral.png" onmouseover="this.src='/images/exitHover.png';" onmouseout="this.src='/images/exitNeutral.png';" style="position:absolute; Right:1%; top:10%;">
      
  </div>
  
  <div style="position:relative; border-style:solid; border-width:2px; border-color:gray; ">



    <button type="button" class="ui-button ui-corner-all" data-toggle="collapse" data-target="#Description" >Description</button>
    <div id="Description" class="collapse">
      The best pasta you've ever had. 
    </div>

    <br>

    <button type="button" class="ui-button ui-corner-all" data-toggle="collapse" data-target="#ingredients">Ingredients</button>
    <div id="ingredients" class="collapse">
      <ul>
        <li>Pasta</li>
        <li>Milk</li>
        <li>Cheese</li>
      </ul>
    </div>

    <br>

    <button type="button" class="ui-button ui-corner-all" data-toggle="collapse" data-target="#equipment">Equipment</button>
    <div id="equipment" class="collapse">
      <ul>
        <li>Large pot</li>
        <li>Strainer</li>
      </ul>
    </div>

    <br>

    <button type="button" class="ui-button ui-corner-all" data-toggle="collapse" data-target="#instructions">Instructions</button>
    <div id="instructions" class="collapse">
      <ol>
        <li>Boil the pasta</li>
        <li>Add milk and cheese</li>
      </ol>
    </div>

    <br>

    <button type="button" class="ui-button ui-corner-all" data-toggle="collapse" data-target="#comments">Comments</button>
    <div id="comments" class="collapse">
      <div class="panel user" id="user1" style="padding-top: 5px; position: relative">
        <img src="/images/saltguy.jpg" style="position:absolute; float: left; border-radius: 50px" width="60" height="60">
        <p class="description" style="position: absolute; left: 40%; top: 38%">This recipe tastes worse than my grandmother's ashes. Needs salt. </p>
      </div>
    </div>
    
    <br><br>

    <button id="ignore" class="ui-button ui-widget ui-corner-all">Ignore</button>
    <button id="remove" class="ui-button ui-widget ui-corner-all">Remove</button>
    <button id="tagConfirm" class="ui-button ui-widget ui-corner-all" style="position:absolute; Right:5%; bottom:3%;">Tag</button>
    <input id="tag" style="position:absolute; right:12%; bottom:3%; height:30px; font-size:14pt;" size="20">
    
  </div>

</body>
</html>